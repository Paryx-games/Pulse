#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

commit_msg=$(cat "$1")

conventional_commit_regex="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\(.+\))?!?: .{1,}$"

if ! echo "$commit_msg" | grep -qE "$conventional_commit_regex"; then
  echo "Commit message does not follow Conventional Commits format"
  echo ""
  echo "Format: <type>(optional scope): <description>"
  echo ""
  echo "Valid types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
  echo ""
  echo "Example: feat(player): add playback speed control"
  exit 1
fi

echo "Commit message follows Conventional Commits format"
