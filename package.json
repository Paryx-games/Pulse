{
    "name": "pulse",
    "version": "1.0.0",
    "description": "A beautiful media player built with Electron and FFmpeg",
    "author": "paryx",
    "main": "src/main/main.js",
    "type": "commonjs",
    "scripts": {
        "start": "electron .",
        "dev": "node dev.js",
        "vite": "vite",
        "vite:build": "vite build",
        "clean": "rimraf dist dist-electron",
        "build:dev": "echo DEV BUILD && vite build && echo Building Pulse Media... && npx electron-builder --win portable --x64 || (echo. && echo Build failed! && exit /b) && echo. && echo Build complete!",
        "build:prod": "echo PRODUCTION BUILD && vite build && echo Building Pulse Media... && npx electron-builder --win nsis msi --x64 || (echo. && echo Build failed! && exit /b) && echo. && echo Build complete!",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "prepare": "husky install"
    },
    "keywords": [
        "media-player",
        "ffmpeg",
        "electron",
        "video"
    ],
    "license": "GPL-3.0",
    "dependencies": {
        "@ffmpeg/ffmpeg": "^0.12.15",
        "@ffmpeg/util": "^0.12.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "@vitejs/plugin-react": "^4.2.1",
        "electron": "^39.1.1",
        "electron-builder": "^26.0.12",
        "eslint": "^8.54.0",
        "patch-package": "^8.0.0",
        "husky": "^8.0.3",
        "rimraf": "^6.1.0",
        "terser": "^5.44.1",
        "typescript": "^5.3.3",
        "vite": "^7.2.2"
    },
    "build": {
        "appId": "com.pulsemedia.app",
        "productName": "Pulse Media",
        "directories": {
            "output": "dist"
        },
        "files": [
            "dist-electron/**/*",
            "src/**/*",
            "index.html",
            "main.js",
            "package.json"
        ],
        "win": {
            "target": [
                "nsis",
                "msi",
                "portable"
            ],
            "icon": "assets/icon/pulse.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}